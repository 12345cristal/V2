{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",

    "paths": {
      "@env/*": ["./src/environment/*"],
      "@app/*": ["./src/app/*"],
      "@shared/*": ["./src/app/shared/*"]
    }
  }
}
