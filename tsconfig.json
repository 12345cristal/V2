{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",

    "baseUrl": "./src",
    "paths": {
      "@env/*": ["environment/*"],
      "@app/*": ["app/*"],
      "@shared/*": ["app/shared/*"]
    }
  }
}
